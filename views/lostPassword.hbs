<!DOCTYPE html>
<html lang="en">
<head>
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    
    <meta charset="UTF-8">
    <title>{{title}}</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="">
    {{#each cssPaths}}
        <link rel="stylesheet" href="{{this}}">
    {{/each}}

    {{#each appleTouchIcons}}
        <link rel="apple-touch-icon" sizes="{{this.size}}" href="{{this.path}}">
    {{/each}}
    {{#each icons}}
        <link rel="icon" type="image/png" sizes="{{this.size}}" href="{{this.path}}">
    {{/each}}
    <link rel="manifest" href="../public/favicons/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="./favicons/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">

    <style>
        body {
            font-family: 'Open Sans', sans-serif;
        }
        .navbar-default {
            margin-top: 0;
            border-radius: 0;
            padding-bottom: 10px;
            padding-top: 10px ;

        }
        .navbar-brand {
            font-weight: bold;
            font-size: 30px;
            letter-spacing: 0.16em;
        }
    </style>

</head>
<body>

    <section class="main-header">
        <nav class="navbar navbar-default navbar-form navbar-inverse navbar-fixed-top">
            <div class="container">
                <a class="navbar-brand" href="/" style="color: white">JOBSCREED</a>
                <div class="navbar-form navbar-left">
                    <div class="row" id="existLMessage" style="color: red"></div>
                    <div class="form-group">
                        <input type="email" id="emailL" name="email" class="form-control" style="width: 250px" placeholder="Email ID" required><div id="emailLMessage" style="color: red"></div>
                    </div>
                    <div class="form-group">
                        <input type="password" id="passwordL" name="password" class="form-control" style="width: 250px" placeholder="Password" required><div id="passwordLMessage" style="color: red"></div>
                    </div>
                    <button type="submit" class="btn btn-success" id="login">LOGIN <i class="fa fa-sign-in" aria-hidden="true"></i></button>
                </div>
                <div class="hidden-sm hidden-xs">
                    <ul class="nav navbar-nav">
                        {{#each socialMediaFA}}
                            <li><a href="#"><i class="fa {{this}} fa-lg" style="color: white"></i></a></li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </nav>
    </section>

    <div class="container">
        <div class="jumbotron">
            <br><h2 style="font-size: 45px">Reset Password</h2>
        </div>
        <div id="result"></div>
        <div role="form">
            <div class="form-group">
                <label for="email">Email ID :</label>
                <input type="email" class="form-control" id="email" required><small id="emailMessage" style="color: red; display: inline"></small>
            </div>
            <button type="submit" class="btn btn-default" id="lostPassword">Send Request Mail</button>
            <a class="btn btn-info" href="/index">Back</a>
        </div>
    </div>

    {{#each jsPaths}}
        <script type="text/javascript" src="{{this}}"></script>
    {{/each}}
</body>
</html>
